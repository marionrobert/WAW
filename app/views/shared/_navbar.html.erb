            <%end%>
            <li class="nav-link active">
              <%= link_to "Horaires d'ouverture", new_shop_path, style:"text-decoration:none;"%>
            </li>
            <%if current_user%>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" style="text-decoration:none; color:blue;" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Mon compte
                </a>
                <ul class="dropdown-menu" style="border-left:none; border-right:none;">
