    </div>

    <%# ////////BOUTON HOME ///////////// %>
    <div data-controller="category", data-action="mouseleave->category#homebuttonrestore">
      <%= link_to "/" do%>
          <i class="fa-solid fa-house btnhome", style="color:grey", data-controller="category", data-action="mouseover->category#homebuttondeploy"><span id="homebutton" class="deploy_home_icon">HOME</span></i>
