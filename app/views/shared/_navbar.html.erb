                  <li class="pl-3 pr-3 mt-2 dropdown-item"><%= link_to "Modifier mot de passe", "/", style:"text-decoration:none;"%></li>
                  <li class="pl-3 pr-3 mt-2 dropdown-item"><%= link_to "Deconnexion", destroy_user_session_path,'data-turbo-method': :delete, style:"text-decoration:none;"%></li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" href="#">Formulaire de contact</a></li>
                </ul>
              </li>
            <%end%>
          </ul>
          <%# CECI EST UNE SEARCH BAR DANS LE MENU DEROULANT %>
