      <div class="c4-fullcard" style="position:relative">
        <%# NE RIEN METTRE ICI %>

      <%= link_to product_path(product) do%>
        <div class="c4-imagediv">
          <% if product.photos.attached? %>
            <%= cl_image_tag product.photos.first.key, class:"c4-image"%>
          <%else %>
            <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" class="c4-image" alt="no_images_available" >
          <%end%>
        </div>


        <div class="c4-descriptiondiv">
          <h3 class="c4-fontsize" style="margin-left:5px;text-decoration:none;color:black;"><%= product.name %></h3>
        </div>
      <%end%>

        <div class="c4-actionandpricearea">
        <%# NE RIEN METTRE ICI %>
          <div class="c4-buttonarea c4-fontsize">
            <%#= link_to line_items_path(product_id: product), remote: true do %>
              <i class="fa-solid fa-cart-plus" style="color:blue"></i>
            <%#end%>
            <i class="fa-solid fa-heart c4-favorite" style="color:blue"></i>
          </div>
          <div class="c4-pricearea">
          <%# NE RIEN METTRE ICI %>
                    <%# SI IL EXISTE UN PRIX PROMO %>
            <%if product.discount_price_cents != 0%>

              <%# PRIX DE BASE BARRE %>
              <%if humanized_money_with_symbol(product.price).include?(",") %>
                <span class="c4-fontsize" style="text-align:end;font-weight:bolder;text-decoration:line-through;"><%= humanized_money_with_symbol(product.price)[/^(.+?),/]%></span>
                <span class="c4-fontsizebis" style="text-align:end;font-weight:bolder;position:relative;bottom:8px;left:-8px;text-decoration:line-through;"><%= humanized_money_with_symbol(product.price).last(2)%> ttc</span>
              <%else %>
                <span class="c4-fontsize" style="text-align:right;font-weight:bolder;text-decoration:line-through;"><%= humanized_money_with_symbol(product.price)%>,</span><span class="c4-fontsizebis" style="text-align:end;font-weight:bolder;position:relative;bottom:8px;left:-4px">  00 ttc</span>
              <%end%>
              <br>

              <%# PRIX PROMO %>
              <%if humanized_money_with_symbol(product.discount_price_cents/100).include?(",") %>
                <span class="c4-fontsize" style="text-align:end;font-weight:bolder;color:green;"><%= humanized_money_with_symbol(product.discount_price_cents/100)[/^(.+?),/]%></span>
                <span class="c4-fontsizebis" style="text-align:end;font-weight:bolder;position:relative;bottom:8px;left:-8px;color:green;"><%= humanized_money_with_symbol(product.discount_price_cents/100).last(2)%> ttc</span>
              <%else %>
                <span class="c4-fontsize" style="text-align:right;font-weight:bolder;color:green;"><%= humanized_money_with_symbol(product.discount_price_cents/100)%>,</span><span class="c4-fontsizebis" style="text-align:end;font-weight:bolder;position:relative;bottom:8px;left:-4px;color:green">  00 ttc</span>
              <%end%>

            <%else%>
              <%# SINON PRIX NORMAL SEULEMENT %>
              <%if humanized_money_with_symbol(product.price).include?(",") %>
                <span class="c4-fontsize" style="text-align:end;font-weight:bolder;"><%= humanized_money_with_symbol(product.price)[/^(.+?),/]%></span>
                <span class="c4-fontsizebis" style="text-align:end;font-weight:bolder;position:relative;bottom:8px;left:-8px;"><%= humanized_money_with_symbol(product.price).last(2)%> ttc</span>
              <%else %>
                <span class="c4-fontsize" style="text-align:right;font-weight:bolder;"><%= humanized_money_with_symbol(product.price)%>,</span><span class="c4-fontsizebis" style="text-align:end;font-weight:bolder;position:relative;bottom:8px;left:-4px">  00 ttc</span>
              <%end%>
            <%end%>
          </div>
        </div>
      </div>
