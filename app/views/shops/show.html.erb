<div class="main-bg">
  <div class="container" style="padding-top:10vh">
    <div class="row mt-5">
      <div class="col ms-5">
        <h2><%= @shop.name %></h2>
        <p><%= @shop.description %></p>
        <p><%= @shop.address %></p>
      </div>
    </div>
    <div class="row d-flex justify-content-around">
      <div class="col-md-5 mb-5">
        <%= render "carrousel-shop" %>
      </div>
      <div class="col-md-5 mb-5 ">
        <table class="table table-sm">
          <h5 class="mt-3 font-weight-bold">Nos horaires d'ouverture</h5>
          <tbody>
            <% @day_schedules.each_with_index do |day, index| %>
              <tr>
                <th scope="row"><%= @weekdays[index] %></th>
                <td ><%= day["am_opens_at"].hour%>h<%=day["am_opens_at"].min%> - <%= day["am_closes_at"].hour%>h<%=day["am_closes_at"].min%></td>
                <td><%= day["pm_opens_at"].hour%>h<%=day["pm_opens_at"].min%> - <%= day["pm_closes_at"].hour%>h<%=day["pm_closes_at"].min%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row d-flex justify-content-around mt-5">
      <div class="col-md-4 mt-5">
      <h4>Une question ? Contactez-nous!</h4>
        <%= simple_form_for(@contact) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :first_name, label: "PrÃ©nom" %>
            <%= f.input :last_name, label: "Nom" %>
            <%= f.input :email, label: "Email" %>
            <%= f.input :content, label: "Message" %>
          </div>
          <div class="form-actions">
              <%= f.button :submit, class:"btn btn-dark", value:"Envoyer votre message"%>
          </div>
          <% end %>
      </div>
      <div class="col-md-6 mt-5"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="row">
    </div>
    </div>
  </div>
</div>
