<div class="container", style="background-color:<%=Shop.first.themebgcolor%>;">
  <h2 style="padding-top:150px;text-align:center;"> Créer une nouvelle sous-catégorie</h2>
  <p style="padding-top:10px;text-align:center;">Catégorie de rattachement: <%= @category.name %></p>

  <div class="row justify-content-center">
    <div class="mt-5 mb-5 col-sm-12 col-md-6 col-lg-4", style="background-color:rgba(130,130,130,0.3);border-radius:10px;">
      <%= simple_form_for [@category, @subcategory] do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <%# MENU DEROULANT DE CATEGORIE%>
        <div class="form-inputs" style="padding-top:10px">
          <%= f.input :name, label:"Nom", placeholder: "Nom de la nouvelle sous-catégorie", label_html:{ class:"labelcolor" }%>
        </div>
        <% end %>
        <div style="padding-top:10px;padding-bottom:20px;">
          <%= link_to "Ajouter une nouvelle catégorie", new_category_path, class:"btn btn-success", remote: true %>
        </div>
    </div>
  </div>
</div>
