<div class="container" style="margin-top:35vh">
  <div style="display:flex;justify-content:center">
    <h2><%=@category.name%></h2>
  </div>
  <%@subcategories.each do |subcategory|%>
  <%=link_to category_subcategory_path(subcategory) do%>
    <button class="btn btn-primary m-5 p-3"><%=subcategory.name%></button> <-Voir tout
  <%end%>
  <div style="display:flex;">
    <div class="wrapperhomepage">
      <% @products.each do |product| %>
        <%= render "shared/#{Shop.first.card}", product: product%>
      <%end%>
    </div>
  </div>
  <%end%>
</div>
<%console%>
