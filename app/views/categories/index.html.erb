        <%# MENU DEROULANT DE CATEGORIE%>
        <div class="form-inputs" >
          <%= category.input :name, collection: Category.all, default: Category.first, label:"Choisir la categorie", label_html:{ class:"labelcolor" } %>
        </div>
        <div class="form-action" >
          <%= button_to "CHOISIR ET CONTINUER",  new_category_subcategory_path(category), class:"btn btn-success", remote: true %>
        </div>
        <% end %>


