<div class="container mt-5" >
  <div class="row justify-content-center ">
    <div class="log-formulaire col-xs-10 col-lg-6 col-xl-4 p-4">
      <h2 style="text-align:center">Se connecter</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false}) do |f| %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions">
          <button class="btn btn-primary"><%= f.button :submit, "Connexion" %></button>
        </div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
