<div class="container" style="margin-top:20vh;min-height:55vh;" >
  <div class="row justify-content-center ">
    <div class="log-formulaire col-xs-10 col-lg-6 col-xl-4 p-4">
      <h2 style="color:black;text-align:center;">Mot de passe oublié?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label_html:{ class:"labelcolor" } %>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Réinitialiser mon mot de passe" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
