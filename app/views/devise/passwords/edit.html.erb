<div class="container" style="margin-top:20vh;min-height:55vh;" >

  <h2 style="color:black;text-align:center;">Modifier votre mot de passe</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: "Nouveau mot de passe",
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }
                  label_html:{ class:"labelcolor" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmer la saisie du nouveau mot de passe",
                  required: true,
                  input_html: { autocomplete: "new-password" }
                  label_html:{ class:"labelcolor" }%>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Modifier mon mot de passe" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
