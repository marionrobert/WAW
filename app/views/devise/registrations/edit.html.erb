<div class="container" style="margin-top:20vh;min-height:55vh;" >
  <div class="row justify-content-center ">
    <div class="log-formulaire col-xs-10 col-lg-6 col-xl-4 p-4">
      <h2 style="text-align:center;color:black">Editer mon compte<%= resource_name.to_s.humanize %></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        hint: "Laissez-le champ vide si vous ne souhaitez pas le modifier.",
                        required: false,
                        input_html: { autocomplete: "new-password" },
                        label: "Nouveau mot de passe",
                        label_html:{ class:"labelcolor" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" }
                        label: "Nouveau mot de passe",
                        label_html:{ class:"labelcolor" } %>
            <%= f.input :current_password,
                        hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications.",
                        required: true,
                        input_html: { autocomplete: "current-password" }
                        label: "Mot de passe actuel",
                        label_html:{ class:"labelcolor" } %>
          </div>

          <div class="form-actions d-flex justify-content-center">
            <button class="btn btn-primary"><%= f.button :submit, "Mettre à jour mon mot de passe" %></button>
          </div>
        <% end %>

        <h3>Désactiver mon compte.</h3>

        <p>Souhaitez-vous nous quitter ? <%= link_to "Désactiver", registration_path(resource_name), data: { confirm: "Êtes-vous sûr?" }, method: :delete %></p>

        <%= link_to "Retour", :back %>
    </div>
  </div>
</div>
