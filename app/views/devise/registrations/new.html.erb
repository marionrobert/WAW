<div class="container" style="margin-top:20vh;margin-bottom:20vh;min-height:55vh;" >
  <div class="row justify-content-center ">
    <div class="log-formulaire col-xs-10 col-lg-6 col-xl-4 p-4">
      <h2 style="text-align:center;color:black">Créer un nouveau compte</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
          data: {turbo: false}) do |f| %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        label: "Adresse e-mail",
                        label_html:{ class:"labelcolor" } %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        label: "Mot de passe",
                        label_html:{ class:"labelcolor" }%>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label: "Confirmer mot de passe",
                        label_html:{ class:"labelcolor" }%>
          </div>

          <div class="form-actions d-flex justify-content-center">
            <button class="btn btn-primary"> <%= f.button :submit, "Créer" %></button>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
    </div>
  </div>
</div>
