<div class="container">
  <div class="row">
    <div class="col-sm-4 col-12">
      <%= form_with url: products_path, method: :get, class: "d-flex pt-5 py-5" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "TROUVE UN TRUC"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
  </div>
</div>

<p>Find me in app/views/products/index.html.erb</p>

<div class="container">
  <h1>Products</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card m-5">
          <img src="https://images.unsplash.com/photo-1609702839586-e9b637bb93b9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=715&q=80" alt="no_images", >
           <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description%></p>
            <p>Prix: <%= humanized_money_with_symbol(product.price) %></p>
            <%= link_to "Info", product_path(product), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
