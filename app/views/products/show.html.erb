<div class="main-bg">
  <div class="container">
    <div class="mt-5">
      <%= link_to products_path, :class => "btn btn-dark mt-5" do%>
        <span><i class="fa-solid fa-arrow-rotate-left"></i> Retour aux produits</span>
      <% end %>
    </div>
    <div class="row d-flex justify-content-center mt-5">
      <div class="col-sm-12 col-lg-6">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" >
          <div class="carousel-indicators">
            <% @product.photos.each_with_index do |photo, index| %>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to=<%=index%> class="active" aria-current="true" aria-label="Slide 1"></button>
            <%end%>
          </div>

          <div class="carousel-inner">
            <div class="carousel-item active" style="text-align:center">
              <%= cl_image_tag @product.photos.first.key, height: 500, width: 500, crop: :fill %>
            </div>
            <% @product.photos.each_with_index do |photo, index| %>
              <% if index > 0 %>
                <div class="carousel-item" style="text-align:center">
                  <%= cl_image_tag photo.key, height: 500, width: 500, crop: :fill %>
                </div>
              <% end %>
            <% end%>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <div class="col-sm-12 col-lg-6">
          <h1><%= @product.name %></h1>
            <p>Prix: <%= humanized_money_with_symbol(@product.price) %></p>
            <p>Description: <%= @product.description %>
      <div class="button">
        <% if user_signed_in? %>
          <%= form_with url: orders_path do %>
            <%= hidden_field_tag 'product_id', @product.id %>
            <%= submit_tag 'Acheter', class: 'btn btn-primary' %>
          <% end %>
          <%= button_to "Ajouter au panier", line_items_path(product_id: @product.id), class:"btn btn-warning" %>
        <% else %>
          <%= link_to "Acheter", user_session_path, class: 'btn btn-primary' %>
          <%= button_to "Ajouter au panier", line_items_path(product_id: @product.id), class:"btn btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>

    <div class="row my-5">
      <% if current_user == nil %>
      <%else current_user.admin%>
        <div class="row", style="text-align:center">
          <div class="my-3" >
            <%= link_to "Modifier produit", edit_product_path(@product), class: "btn btn-warning" %>
            <%= link_to "Supprimer le produit", @product, data: { turbo_method: :delete }, class: "btn btn-danger" %>
          </div>
        </div>
      <% end%>
    </div>
  </div>
</div>
<% console %>
